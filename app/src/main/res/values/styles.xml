<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:popupBackground">@color/azul_base</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:backgroundTint">@color/azul_base</item>
    </style>

    <style name="SpinnerPopupText">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SpinnerStyle123" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_border</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:paddingLeft">8dp</item> <!-- Espaciado izquierdo -->
        <item name="android:paddingRight">8dp</item> <!-- Espaciado derecho -->
        <item name="android:paddingTop">8dp</item> <!-- Espaciado superior -->
        <item name="android:paddingBottom">8dp</item> <!-- Espaciado inferior -->
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Cambiar el color de fondo de la barra de la aplicaciÃ³n a azul -->
        <item name="android:background">@color/azul_base</item>
    </style>
</resources>